fi
if [[ $SRS_HTTPS == YES ]]; then
    echo -e "${YELLOW}Experiment: HTTPS is enabled. https://github.com/ossrs/srs/issues/1657${BLACK}"
else
    echo -e "${GREEN}Warning: HTTPS is disabled.${BLACK}"
fi
if [[ $SRS_DVR == YES ]]; then
    echo -e "${GREEN}DVR is enabled.${BLACK}"
