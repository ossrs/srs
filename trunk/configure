    echo -e "${GREEN}Note: StreamConverter is disabled.${BLACK}"
fi
if [[ $SRS_HDS == YES ]]; then
    echo -e "${YELLOW}Experiment: HDS is enabled.${BLACK}"
else
    echo -e "${GREEN}Warning: HDS is disabled.${BLACK}"
